<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="20dp"
    android:background="#60EFB6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/curso"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269" />

    <RadioGroup
        android:id="@+id/rbCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36">

        <RadioButton
            android:id="@+id/rbEso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESO" />

        <RadioButton
            android:id="@+id/rbBach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bachillerato" />

        <RadioButton
            android:id="@+id/rbFP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciclos Formativos" />

    </RadioGroup>

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="269dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/hintet"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EAD360"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65999997">

        <RadioButton
            android:id="@+id/rbReligion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Religión" />

        <RadioButton
            android:id="@+id/rbValores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valores" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C54141"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65999997">

        <RadioButton
            android:id="@+id/rbAcademica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matemáticas Académicas" />

        <RadioButton
            android:id="@+id/rbAplicadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matemáticas Aplicadas" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5FD3BC"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92">

        <RadioButton
            android:id="@+id/rbIngles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inglés" />

        <RadioButton
            android:id="@+id/rbFrances"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Francés" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6AF85F"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92">

        <RadioButton
            android:id="@+id/rbFisica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Física" />

        <RadioButton
            android:id="@+id/rbGriego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Griego" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/LinealLayout"
        android:layout_width="342dp"
        android:layout_height="142dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Familia:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_padre"
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciclo:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_hijo"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="276dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/iesmurgi" />

</androidx.constraintlayout.widget.ConstraintLayout>